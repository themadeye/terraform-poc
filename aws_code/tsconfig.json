{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["dist"],
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx"]
}
