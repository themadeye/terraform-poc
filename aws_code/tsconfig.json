{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": false,
    "lib": ["ES2020.Promise"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "rootDir": "src",
    "strict": true,
    "target": "es6"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
